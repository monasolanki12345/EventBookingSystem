<h1>Users#new</h1>

<%= form_with model: @user do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :phone %><br>
      <%= form.text_field :phone %>
    </p>
    <p>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </p>

    <p>
    <%= form.label :role_id %><br>
    <%=  collection_select(:user, :role_ids , Role.all, :id, :name) %>
  
    </p>

    <p>
      <%= form.submit %>
    </p>
<% end %>


